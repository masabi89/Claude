{
  "name": "promanage-saas",
  "version": "1.0.0",
  "description": "Multi-tenant project & task management platform with AI features",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "db:generate": "cd packages/database && npx prisma generate",
    "db:migrate": "cd packages/database && npx prisma migrate dev",
    "db:deploy": "cd packages/database && npx prisma migrate deploy",
    "db:studio": "cd packages/database && npx prisma studio",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/masabi89/Claude.git"
  },
  "keywords": [
    "project-management",
    "saas",
    "multi-tenant",
    "ai",
    "collaboration",
    "nextjs",
    "nestjs",
    "typescript"
  ],
  "author": "ProManage Team",
  "license": "MIT"
}

